<!-- #wrapper -->
<div id="wrapper">
  <!-- #page -->
  <div id="page" class="">
    <div class="wrap-login-page">
      <div class="flex-grow flex flex-column justify-center gap30">
        <a href="index.html" id="site-logo-inner">

        </a>
        <div class="login-box">
          <div>
            <h3>Login to account</h3>
            <div class="body-text">Enter your email & password to login</div>
          </div>
          <form class="form-login flex flex-column gap24">
            <fieldset class="email">
              <div class="body-title mb-10">Email address
                <span class="tf-color-1">*</span></div>
              <input
                class="flex-grow"
                type="email"
                placeholder="Enter your email address"
                name="email"
                tabindex="0"
                value=""
                aria-required="true"
                required=""
                id="email"
              />
            </fieldset>
            <fieldset class="password">
              <div class="body-title mb-10">Password
                <span class="tf-color-1">*</span></div>
              <input
                class="password-input"
                type="password"
                placeholder="Enter your password"
                name="password"
                tabindex="0"
                value=""
                aria-required="true"
                required=""
                id="password"
              />
              <span class="show-pass">
                <i class="icon-eye view"></i>
                <i class="icon-eye-off hide"></i>
              </span>
            </fieldset>
           
            <button
              type="button"
              id="submit"
              class="tf-button w-full"
            >Login</button>
          </form>
         
        </div>
      </div>
      <div class="text-tiny">Copyright Â© 2024 Volvrit, All rights reserved.</div>
    </div>
  </div>
  <!-- /#page -->
</div>
<!-- /#wrapper -->