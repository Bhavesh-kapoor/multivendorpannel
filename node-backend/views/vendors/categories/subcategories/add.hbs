<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Sub Category infomation</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="/admin/dashboard">
                            <div class="text-tiny">Dashboard</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#">
                            <div class="text-tiny">Sub Category</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">New </div>
                    </li>
                </ul>
            </div>
            <!-- new-category -->
            <div class="wg-box">
                <form class="form-new-product form-style-1" enctype="multipart/form-data"
                    action="/admin/subcategories/store" id="globalform">
                    <fieldset class="category">
                        <div class="body-title">Select Category  * </div>
                        <div class="select flex-grow">
                            <select  name="category_id">
                                <option value="">Select Status</option>
                                {{#if categories.length }}
                                {{#each categories}}

                                <option value="{{this.id}}">{{this.category_name}}</option>

                                {{/each }}

                                {{else}}
                                <option value="">Please Create Category First</option>


                                {{/if}}

                            </select>
                        </div>
                    </fieldset>
                    <fieldset class="name">
                        <div class="body-title">Sub Category name <span class="tf-color-1">*</span></div>
                        <input class="flex-grow"   type="text" placeholder="Sub Category name" name="subcategory_name">
                    </fieldset>
                    <fieldset>
                        <div class="body-title">Upload Sub Category Icon <span class="tf-color-1">*</span></div>
                        <div class="upload-image flex-grow">
                            <div class="item up-load">
                                <label class="uploadfile" for="myFile">
                                    <span class="icon">
                                        <i class="icon-upload-cloud"></i>
                                    </span>
                                    <span class="body-text">select Image <span class="tf-color">click to
                                            browse</span></span>
                                    <input type="file" id="myFile" name="category_file">
                                </label>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="category">
                        <div class="body-title">Select Sub  category Status</div>
                        <div class="select flex-grow">
                            <select class="" name="status">
                                <option>Select Status</option>
                                <option value="1" selected>Activate</option>
                                <option value="2">Deactivate</option>
                            </select>
                        </div>
                    </fieldset>
                    <div class="bot">
                        <div></div>
                        <button class="tf-button w208 save" type="submit">Save</button>
                    </div>
                </form>
            </div>
            <!-- /new-category -->
        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-wrap -->
    <!-- bottom-page -->

</div>